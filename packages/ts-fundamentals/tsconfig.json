{
  "include": ["src"],
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "target": "ES2018",
    "moduleResolution": "Node",
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  }
}
